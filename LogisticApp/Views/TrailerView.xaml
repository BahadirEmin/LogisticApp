<Window x:Class="LogisticsCRM.Views.TruckView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Truck Records" Height="350" Width="525">
    <Grid>
        <ListBox ItemsSource="{Binding Trucks}" DisplayMemberPath="LicensePlate"/>
        <Button Content="Add Truck" Command="{Binding AddTruckCommand}"/>
    </Grid>
</Window>