<Window x:Class="LogisticApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Window" Height="364" Width="535">
    <Grid>
        <!-- Main container to stack content vertically -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Large "Logistic App" text -->
            <TextBlock Text="Logistic App" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Buttons for navigating to other views -->
            <Button Content="Trailer View" Width="200" Height="40" Margin="0,0,0,20" Click="TrailerViewButton_Click"/>
            <Button Content="Truck View" Width="200" Height="40" Margin="0,0,0,20" Click="TruckViewButton_Click"/>


        </StackPanel>
    </Grid>
</Window>
